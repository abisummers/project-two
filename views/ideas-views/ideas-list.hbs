<h1 class="idea-list">Ideas list</h1>

<div class="list-container">

  <ul class="ideas">
    {{#each ideaArray}}


    <li class="idea-list-layout">

      <h3>{{this.name}}</h3>
      <img src="{{this.picture}}" />
      <br>
      <a class="idea-button" href="/ideas/{{this._id}}"><button>See more</button></a>

    </li>

    {{else}}

    <p>There is no ideas yet</p>
    <a href="/add-idea">Add your amazing idea</a>
    {{/each}}
  </ul>


  <div class="create-project">
    <h3>CREATE</h3>
    <img src="/images/you.gif" alt="">
    <a href="/add-idea"><button>CREATE</button></a>

  </div>
</div>

<a href="/add-idea">Add an Idea</a>